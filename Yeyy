name: Telegram JobBot

on:
  schedule:
    - cron: '0 7 * * *'  # k√∂r varje dag kl 07:00
  workflow_dispatch:

jobs:
  run-jobbot:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repo
      uses: actions/checkout@v2
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: 3.10
    - name: Install requests
      run: pip install requests
    - name: Run bot script
      run: python jobbot.py
